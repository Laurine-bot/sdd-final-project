<div class="form">

  <h1>Login</h1>
  
  <%= form_tag login_path do %>
    <div class="field">
      <%= label_tag "Email*" %>
      <%= text_field_tag :email, nil, placeholder: "Email" %>
    </div>
    <div class="field">
      <%= label_tag "Password*" %>
      <%= password_field_tag :password, nil, placeholder: "Password" %>
    </div>
      <%= submit_tag "Log In"%>
  <% end %>

</div>